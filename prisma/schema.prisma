generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id             String           @id @default(uuid())
  mobile         String           @unique
  password       String
  fullName       String?
  role           String           @default("user")
  balance        Float            @default(0)
  recharge       Float            @default(0)
  income         Float            @default(0)
  fundHistory    FundHistory[]
  withdrawals    Withdrawal[]
  orders         Order[]
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model FundHistory {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String   // "BALANCE", "RECHARGE", "INCOME"
  amount    Float
  prevValue Float
  newValue  Float
  remark    String?
  createdAt DateTime @default(now())
}

model Withdrawal {
  id            String   @id @default(uuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  amount        Float
  status        String   @default("PENDING") // PENDING, APPROVED, DECLINED
  bankDetails   Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Order {
  id              String   @id @default(uuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  planId          String
  planName        String
  price           Float
  dailyIncome     Float
  totalReturn     Float
  cycleDays       Int
  status          String   @default("PENDING") // PENDING, ACTIVE, COMPLETED, CANCELLED
  purchaseDate    DateTime @default(now())
  activatedDate   DateTime?
  expiryDate      DateTime?
  nextPayoutDate  DateTime?
  totalPaidOut    Float    @default(0)
  paymentProof    Json?    // Can store payment screenshot or transaction details
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
